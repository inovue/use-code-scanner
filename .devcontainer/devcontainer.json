{
  "name": "use-code-scanner",
  "image": "mcr.microsoft.com/devcontainers/typescript-node:18-bullseye",
  "containerEnv": {
    "TZ": "Asia/Tokyo"
  },
  "runArgs": ["--privileged", "--init"],
  "features": {},

  "postCreateCommand": "sudo chown -R node:node /workspaces/use-code-scanner",
  "mounts": [
    "source=use-code-scanner-docs-node_modules,target=${containerWorkspaceFolder}/docs/node_modules,type=volume",
    "source=use-code-scanner-packages-node_modules,target=${containerWorkspaceFolder}/packages/node_modules,type=volume"
  ],
  "remoteUser": "node",
  "customizations": {
    "vscode": {
      "settings": {
        "editor.renderWhitespace": "all",
        "[js][jsx][ts][tsx]": {
          "editor.defaultFormatter": "esbenp.prettier-vscode",
          "editor.formatOnSave": true,
          "editor.codeActionsOnSave": {
            "source.fixAll": true,
            "source.organizeImports": true
          }
        },
        "[json][jsonc]": {
          "editor.defaultFormatter": "esbenp.prettier-vscode",
          "editor.formatOnSave": true,
          "editor.codeActionsOnSave": {
            "source.fixAll": true
          }
        }
      },
      "extensions": [
        "GitHub.copilot",
        "GitHub.copilot-chat",
        "mhutchie.git-graph",
        "GitHub.vscode-pull-request-github",
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "ms-vscode.live-server",
        "bradlc.vscode-tailwindcss",
        "astro-build.astro-vscode"
      ]
    }
  }
}
